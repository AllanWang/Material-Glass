<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Normal" parent="@android:style/Theme.Material" />
    <style name="Theme.NoTitle.Light" parent="@style/Theme.NoTitle.Dark"/>
    <style name="Theme.NoTitle.Dark" parent="@android:style/Theme.Material.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/screen_background_gray</item>-->
        <item name="popupMenuStyle">@style/Widget.PopupMenu.Dark</item>
        <item name="dropDownListViewStyle">@style/Widget.Note.ListView.DropDown.Dark</item>
        <item name="listItemTextColorUnderV11">@color/text</item>
    </style>
    <style name="Theme.Trans.NoTitle.Light" parent="@style/Theme.Trans.NoTitle.Dark"/>
    <style name="Theme.Trans.NoTitle.Dark" parent="@android:style/Theme.Material.Panel">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="listItemTextColorUnderV11">@color/text</item>
    </style>
    <style name="Theme.OptionDialog.Dark" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:windowNoTitle">true</item>
        <item name="listItemTextColorUnderV11">@color/text</item>
    </style>
    <style name="Theme.OptionDialog.Light" parent="@style/Theme.OptionDialog.Dark"/>
    <style name="theme_dialog_transparent" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Holo.NoTitle.Light" parent="@android:style/Theme.Material.NoActionBar" />
    <style name="Theme.Holo.NoTitle.Dark" parent="@android:style/Theme.Material.NoActionBar" />
    <style name="Theme.Holo.Trans.NoTitle.Light" parent="@android:style/Theme.Material.Panel" />
    <style name="Theme.Holo.Trans.NoTitle.Dark" parent="@android:style/Theme.Material.Panel" />
    <style name="TextAppearance" parent="@android:style/TextAppearance.Material" />
    <style name="Widget" />
    <style name="Widget.PopupMenu" parent="@style/Widget">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
    <style name="Widget.PopupMenu.Light" parent="@style/Widget.PopupMenu"/>
    <style name="Widget.PopupMenu.Dark" parent="@style/Widget.PopupMenu"/>
    <style name="Widget.Note.ListView.DropDown.Light" parent="@style/Widget.Note.ListView.DropDown.Dark"/>
    <style name="Widget.Note.ListView.DropDown.Dark" parent="@android:style/Widget.Material.ListView">
        <item name="android:background">@color/background</item>
    </style>
</resources>
