<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EmeraldSea.Settings" parent="@android:style/Theme.Material.Wallpaper">
        <item name="android:actionBarStyle">@style/EsActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText" parent="@android:style/Widget.Material.ActionBar.TabText" />
    <style name="Base.Widget.AppCompat.Light.ActionBar.TabText.Inverse" parent="@android:style/Widget.Material.ActionBar.TabText" />
    <style name="Platform.AppCompat" parent="@android:style/Theme.Material.Wallpaper">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionBarStyle">@*common:style/Pitch.ActionBar</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:listViewStyle">@android:style/Widget.Material.ListView</item>
        <!--<item name="android:background">@color/background</item>-->
    </style>
    <style name="Platform.AppCompat.Light" parent="@style/Platform.AppCompat" />
    <style name="Platform.AppCompat.Light.Dialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="Base.ThemeOverlay.AppCompat.Light" parent="@android:style/ThemeOverlay.Material.Dark">
        <item name="isLightTheme">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>
</resources>
