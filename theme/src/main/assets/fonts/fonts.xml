<?xml version="1.0" encoding="utf-8"?>
<familyset version="22">
    <!-- first font is default -->
    <family name="sans-serif">
        <font weight="100" style="normal">HelveticaNeue-Thin.otf</font>
        <font weight="100" style="italic">HelveticaNeue-ThinItalic.otf</font>
        <font weight="300" style="normal">HelveticaNeue-Light.otf</font>
        <font weight="300" style="italic">HelveticaNeue-LightItalic.otf</font>
        <font weight="400" style="normal">HelveticaNeue-Regular.otf</font>
        <font weight="400" style="italic">HelveticaNeue-Italic.otf</font>
        <font weight="500" style="normal">HelveticaNeue-Medium.otf</font>
        <font weight="500" style="italic">HelveticaNeue-MediumItalic.otf</font>
        <font weight="900" style="normal">HelveticaNeue-Black.otf</font>
        <font weight="900" style="italic">HelveticaNeue-BlackItalic.otf</font>
        <font weight="700" style="normal">HelveticaNeue-Bold.otf</font>
        <font weight="700" style="italic">HelveticaNeue-BoldItalic.otf</font>
    </family>

    <!-- Note that aliases must come after the fonts they reference. -->
    <alias name="sans-serif-thin" to="sans-serif" weight="100" />
    <alias name="sans-serif-light" to="sans-serif" weight="300" />
    <alias name="sans-serif-medium" to="sans-serif" weight="500" />
    <alias name="sans-serif-black" to="sans-serif" weight="900" />
    <alias name="arial" to="sans-serif" />
    <alias name="helvetica" to="sans-serif" />
    <alias name="tahoma" to="sans-serif" />
    <alias name="verdana" to="sans-serif" />

    <family name="sans-serif-condensed">
        <font weight="300" style="normal">Helvetica-Condensed-Light.otf</font>
        <font weight="300" style="italic">Helvetica-Condensed-LightItalic.otf</font>
        <font weight="400" style="normal">Helvetica-Condensed-Regular.otf</font>
        <font weight="400" style="italic">Helvetica-Condensed-Italic.otf</font>
        <font weight="700" style="normal">Helvetica-Condensed-Bold.otf</font>
        <font weight="700" style="italic">Helvetica-Condensed-BoldItalic.otf</font>
    </family>
    <alias name="sans-serif-condensed-light" to="sans-serif-condensed" weight="300" />

</familyset>
