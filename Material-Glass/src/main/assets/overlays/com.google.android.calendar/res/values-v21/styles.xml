    <style name="RecipientEditTextViewBase" parent="@android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">#cc060606</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>

    <style name="PreferencesTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/ActionBarBaseStyle.Preferences</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>
    </style>

    <style name="ActionBarBaseStyle.Preferences" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:height">56.0dip</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="CalendarTheme.AllInOneActivity" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>

        <!--<item name="android:windowBackground">@color/background_color</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:startYear">1970</item>
        <item name="android:endYear">2036</item>
        <item name="android:actionBarStyle">@style/ActionBarBaseStyle.Preferences</item>

        <item name="android:backgroundTint">#b0000000</item>
    </style>

    <style name="CalendarTheme.WithActionBar" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:startYear">1970</item>
        <item name="android:endYear">2036</item>
        <item name="android:actionBarStyle">@style/ActionBarBaseStyle.Preferences</item>

        <!--<item name="android:backgroundTint">#0ff</item>-->
    </style>

    <!--individual event-->
    <style name="DetailsThemeCommon" parent="@android:style/Theme.Material.Dialog">
        <item name="android:background">#ff000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/NoDropDownDividers</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>
    </style>
    <style name="NoDropDownDividers" parent="@android:style/Widget.Material.ListView.DropDown">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
