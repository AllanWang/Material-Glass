<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="InstagramTheme" parent="@android:style/Theme.Material">
        <!--<item name="android:colorBackground">@android:color/white</item>-->
		<!--<item name="android:buttonStyle">@style/ButtonStyle</item>-->
        <!--<item name="android:windowBackground">@android:color/white</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:autoCompleteTextViewStyle">@style/IgAutoCompleteTextView</item>-->
        <!--<item name="android:checkboxStyle">@style/IgTextboxStyle</item>-->
        <<!--item name="android:editTextStyle">@style/EditTextStyle</item>-->
        <!--<item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>-->
        <!--<item name="android:textViewStyle">@style/TextViewStyle</item>-->
        <item name="android:textColorLink">@color/textt</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:dialogTheme">@style/IgDialog</item>
        <item name="switchStyle">@style/IgSwitchStyle</item>
    </style>
	
	<style name="IgSwitchStyle">
        <item name="thumbDrawable">@drawable/toggle_nub</item>
        <item name="checkedDrawable">@drawable/toggle_active</item>
        <item name="uncheckedDrawable">@drawable/toggle</item>
    </style>
	
	<style name="IgDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowAnimationStyle">@style/animationDialog</item>
        <item name="android:listChoiceIndicatorSingle">@null</item>
        <item name="android:listChoiceIndicatorMultiple">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listChoiceBackgroundIndicator">@null</item>
        <item name="android:activatedBackgroundIndicator">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
	 <style name="animationDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
